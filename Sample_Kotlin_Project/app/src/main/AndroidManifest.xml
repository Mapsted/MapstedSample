<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mapsted.sample_kt">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Theme.MapstedSample">
        <activity
            android:name="com.mapsted.sample_kt.SampleMainLaunchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.SampleActivityWithFragment"
            android:configChanges="locale|layoutDirection" />
        <activity
            android:name=".activities.SampleMapWithUiToolsActivity"
            android:configChanges="locale|layoutDirection" />
        <activity
            android:name=".activities.SampleMapWithAButtonActivity"
            android:configChanges="locale|layoutDirection" />
        <activity
            android:name=".activities.SampleMapWithListActivity"
            android:configChanges="locale|layoutDirection" />
    </application>
</manifest>